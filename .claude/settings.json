{
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Claude needs your review' -sound Glass -execute '/Users/mawwlle/.local/bin/focus-claude-tab.sh'",
            "async": true
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Agent finished working' -sound Glass -execute '/Users/mawwlle/.local/bin/focus-claude-tab.sh'",
            "async": true
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true
  }
}
